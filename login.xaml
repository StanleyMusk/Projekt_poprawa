<Window x:Class="ProjektyMG.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektyMG"
        mc:Ignorable="d"
        Title="login" Height="450" Width="398">
    <Border Background="#FF5985DE" CornerRadius="100 100 0 0" Margin="20,20,20,-6">
        <StackPanel>
            <Label Content="Logowanie" Foreground="White" FontSize="20px" HorizontalAlignment="Center"></Label>
            <Separator Height="16" Width="254" RenderTransformOrigin="0.507,0.03"></Separator>
            <Label Content="Nazwa Użytkownika" Width="312" Foreground="White" FontSize="14"></Label>
            <TextBox Name="Username" Background="White" Foreground="White" FontSize="14" Width="299"></TextBox>
            <Label Content="Hasło" Width="312" Foreground="White" FontSize="14"></Label>
            <PasswordBox Name="Password" Background="White" Foreground="White" FontSize="14" Width="303" Height="21"></PasswordBox>
            <Button x:Name="ButtonSubmit" Click="ButtonSubmit_Click"  Content="Zaloguj" Background="#adafff" Foreground="White" FontSize="14" Width="248" Height="66" Margin="50" />
        </StackPanel>
    </Border>
</Window>
